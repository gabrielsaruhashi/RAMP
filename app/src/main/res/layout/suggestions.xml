<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:lineSpacingExtra="12sp"
        android:text="Here are our suggestions about where to begin."
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btAns1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/btAns2"
        android:layout_alignParentStart="true"
        android:background="@color/btn1Bg"
        android:bottomRightRadius="10dp"
        android:paddingHorizontal="20dp"
        android:text="      Online Job Search Guide"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btAns3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:bottomRightRadius="10dp"
        android:paddingHorizontal="20dp"
        android:text="      New Haven Job Board"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btAns2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:background="@color/btn2Bg"
        android:bottomRightRadius="10dp"
        android:paddingHorizontal="20dp"
        android:text="      Cover Letters and Resumes"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/btAns1"
        android:layout_marginTop="24dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/imageView3"
        android:layout_alignTop="@+id/btAns3"
        android:layout_marginTop="24dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btAns1"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>